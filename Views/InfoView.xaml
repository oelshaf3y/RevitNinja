<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevitNinja.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="RevitNinja.Views.InfoView"
        mc:Ignorable="d"
        Background="#1b1f23"
        Title="Info" Height="260" Width="680" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <!-- Ninja Image -->
        <Image Width="309" Height="260" HorizontalAlignment="Right" VerticalAlignment="Top"
               Source="pack://application:,,,/RevitNinja;component/Resources/ninja-pic.png" Stretch="Uniform"
/>

        <!-- GitHub Image -->
        <Button Click="gitHub" Margin="46,123,0,0" HorizontalAlignment="Left" Width="63" Height="49" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}">
            <Image  HorizontalAlignment="Left" Width="46" Height="41" VerticalAlignment="Center"
        Source="pack://application:,,,/RevitNinja;component/Resources/github.png" Stretch="Uniform"
        />
        </Button>
        <!-- LinkedIn Image -->
        <Button Click="linkedin" Margin ="120,123,0,0"  HorizontalAlignment="Left" Width="59" Height="49" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}">
            <Image   HorizontalAlignment="Left" Width="51" Height="41" VerticalAlignment="Center"
Source="pack://application:,,,/RevitNinja;component/Resources/linkedin.png" Stretch="Uniform"
               />
        </Button>


        <!-- Revit Ninja Text -->
        <Image Margin="55,16,450,151" 
               Source="pack://application:,,,/RevitNinja;component/Resources/revitninjatext.png"/>


        <!-- Info Image -->
        <Image Margin="91,0,0,10"  Height="56" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="119"
               Source="pack://application:,,,/RevitNinja;component/Resources/info.png"/>

        <!-- Close Image -->
        <Button Click="Button_Click" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="42" Background="{x:Null}" BorderBrush="{x:Null}">
            <Image ToolTip="Close" RenderTransformOrigin="0.5,0.5"  Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="30"
       Source="pack://application:,,,/RevitNinja;component/Resources/icons8-swords-67.png"/>
        </Button>
        <Label x:Name="VersionLabel" Content="Version:" HorizontalAlignment="Left" Margin="260,232,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Give FeedBack" Margin="193,150,426,86" Foreground="White" FontSize="8"/>
        <Button Height="51" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="48" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,0,432,98" Click="giveFeedback">
            <Image ToolTip="Give feedback!" Source="/RevitNinja;component/Resources/feedback.png" Stretch="Uniform" Height="25" Width="25"/>
        </Button>
    </Grid>
</Window>
